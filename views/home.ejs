<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Blog</title>

  
  <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

  <!-- Vanta.NET and Three.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>

  <style>
    #vanta-bg {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
  </style>
</head>

<body class="text-gray-900 dark:text-gray-100 min-h-screen transition-colors duration-300">

  <!-- VANTA.NET background -->
  <div id="vanta-bg"></div>

  <!-- Navbar -->
  <nav class="fixed top-0 left-0 right-0 bg-blue-600 dark:bg-gray-800 shadow-lg z-50">
    <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-white">PostNest</a>
      <div class="flex gap-4 items-center">
        <a href="/" class="text-white hover:underline">Home</a>
        <a href="/compose" class="bg-white text-blue-600 dark:bg-gray-700 dark:text-white px-3 py-1 rounded hover:bg-blue-100 font-medium">Compose</a>
        <button id="toggleDark" class="text-white border px-2 py-1 rounded hover:bg-blue-500 dark:hover:bg-gray-700">
          üåô
        </button>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="pt-20 relative h-[485px] flex items-center justify-center text-center">
    <div class="bg-black bg-opacity-10 w-full h-full absolute top-0 left-0 z-0"></div>
    <div class="relative z-10 px-6">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Welcome to My Blog</h1>
      <p class="text-lg text-white mb-6">Write, read, and discover amazing stories.</p>
      <a href="/compose" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full shadow-lg">
        ‚úçÔ∏è Compose New Post
      </a>
    </div>
  </section>

 
  <main class="max-w-3xl mx-auto px-4 py-8">
    <h1 class="text-4xl  text-white font-bold text-center mb-8">üìö Blog Posts</h1>

    <% if (posts.length === 0) { %>
      <p class="text-center text-gray-600 dark:text-gray-400">No posts yet. Be the first to write one!</p>
    <% } else { %>
      <ul class="space-y-4">
        <% posts.forEach(function(post, index) { %>
          <li class=" dark:bg-gray-800 shadow-md rounded p-4 hover:bg-blue-50 dark:hover:bg-gray-700 transition">
            <a href="/posts/<%= index %>" class="text-xl font-semibold text-blue-600 dark:text-blue-300 hover:underline">
              <%= post.title %>
            </a>
            <% if (post.content) { %>
              <p class="text-gray-600 dark:text-gray-400 mt-1 line-clamp-2">
                <%= post.content.substring(0, 100) %>...
              </p>
            <% } else { %>
              <p class="text-gray-400 italic">No content available.</p>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
 
  <script>
    document.getElementById('toggleDark').addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
    });

    VANTA.NET({
      el: "#vanta-bg",
      mouseControls: true,
      touchControls: true,
      gyroControls: false,
      minHeight: 200.00,
      minWidth: 200.00,
      scale: 1.00,
      scaleMobile: 1.00,
      color: 0x260c58,
      backgroundColor: 0x160d26
    });
  </script>

</body>
</html>
