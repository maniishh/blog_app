  <main class="max-w-3xl mx-auto px-4">
    <h1 class="text-4xl font-bold text-center mb-8">üìö Blog Posts</h1>

    <% if (posts.length === 0) { %>
      <p class="text-center text-gray-600 dark:text-gray-400">No posts yet. Be the first to write one!</p>
    <% } else { %>
      <ul class="space-y-4">
        <% posts.forEach(function(post, index) { %>
          <li class="bg-white dark:bg-gray-800 shadow-md rounded p-4 hover:bg-blue-50 dark:hover:bg-gray-700 transition">
            <a href="/posts/<%= index %>" class="text-xl font-semibold text-blue-600 dark:text-blue-300 hover:underline">
              <%= post.title %>
            </a>
            <p class="text-gray-600 dark:text-gray-400 mt-1 line-clamp-2"><%= post.content.substring(0, 100) %>...</p>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>

  
