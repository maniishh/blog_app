<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>All Blog Posts</title>

  <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">

  <!-- Navbar -->
  <nav class="bg-blue-600 p-4">
    <div class="max-w-6xl mx-auto flex justify-between items-center text-white">
      <a href="/" class="text-2xl font-bold">PostNest</a>
      <a href="/" class="hover:underline">üè† Home</a>
    </div>
  </nav>

  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-6">üìñ All Blog Posts</h1>

    <% if (posts.length === 0) { %>
      <p class="text-center text-gray-600">No posts available.</p>
    <% } else { %>
      <ul class="space-y-6">
        <% posts.forEach(function(post, index) { %>
          <li class="bg-white shadow-md rounded-lg p-6 hover:bg-blue-50 transition">
            <a href="/posts/<%= index %>" class="text-2xl font-semibold text-blue-600 hover:underline block mb-2">
              <%= post.title %>
            </a>
            <% if (post.content) { %>
              <p class="text-gray-700">
                <%= post.content.length > 200 ? post.content.substring(0, 200) + '...' : post.content %>
              </p>
            <% } else { %>
              <p class="text-gray-500 italic">No content available.</p>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>

</body>
</html>
